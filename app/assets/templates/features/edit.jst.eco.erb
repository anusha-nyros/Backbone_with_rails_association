<% form_for :feature, url: "#", html: {class: "form-horizontal"} do |f| %>
	<div class="form-group">
		<%= f.label "Name" %>
		<%#= f.text_field "name", value: "#{@name}" %>
                <input id="feature_name" name="feature[name]" size="30" type="text" value="<%%= @feature.get('name')%>">
	</div>
	<div class="form_actions">
		<%= f.submit "Update Feature", class: "btn btn-primary button" %>
	</div>
<% end %>
