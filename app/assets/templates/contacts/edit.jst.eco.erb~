<% form_for :contact, url: "#", html: {class: "form-horizontal"} do |f| %>
	<div class="form-group">
		<%= f.label "Name" %>
		<%#= f.text_field "name", value: "#{@name}" %>
                <input id="contact_name" name="contact[name]" size="30" type="text" value="<%%= @contact.get('name')%>">
	</div>
	<div class="form-group">
		<%= f.label "Email" %></label>
 		<%#= f.text_field "email", value: "#{@email}" %>
    		<input id="contact_email" name="contact[email]" size="30" type="text"  value="<%%= @contact.get('email')%>">
	</div>
	<div class="form-group">
		<%= f.label "phone" %>
		<%#= f.text_area "phone", size: "70x5", value: "#{@phone}" %>
		<input id="contact_phone" name="contact[phone]" size="30" type="text"  value="<%%= @contact.get('phone')%>">
        </div>
	<div class="form_actions">
		<%= f.submit "Update contact", class: "btn btn-primary button" %>
	</div>
<% end %>
