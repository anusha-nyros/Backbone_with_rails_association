<div class="container">
<h2>Login</h2>
<% form_for(:resource, :as => @resource_name, :url => '#', :html => {:class => "form-horizontal"}) do |f| %>
  <div class="form-fields">
    <%= f.text_field :email, :required => false, :autofocus => true %>
    <%= f.text_field :password, :required => false %>
    <%= f.check_box :remember_me, :as => :boolean %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%#= render "devise/shared/links" %>
</div>
