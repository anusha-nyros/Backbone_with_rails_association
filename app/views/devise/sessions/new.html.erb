<div class="container">
<div class="span8 offset3">
<h2>Sign in</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "signin form-horizontal"}) do |f| %>

  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true, :input_html => {:style =>"margin-left:10px;margin-bottom:20px;"} %>
    <%= f.input :password, :required => false, :input_html => {:style => "margin-left:10px;margin-bottom:20px;"} %>
    <%= f.input :remember_me, :input_html => {:style => "margin-left:32px;margin-bottom:10px;"}, :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div style="margin-left:180px;"> 
    <%= f.button :submit, "Sign in", :class => "btn-success"%>
<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to image_tag("#{provider.to_s.titleize}.png", :size => "20x20", :class =>"#{provider.to_s.titleize}"), omniauth_authorize_path(resource_name, provider) %>
  <% end -%>
<% end -%>
  </div>
<% end %>

<%#= render "devise/shared/links" %>

</div>
</div>



