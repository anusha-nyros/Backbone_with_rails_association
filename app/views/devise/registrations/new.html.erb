<div class="container">
<div class="span8 offset3">
<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal signin"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, :required => true, :autofocus => true , :input_html => {:style =>"margin-left:10px;margin-bottom:20px;"}%>
    <% if f.object.password_required? %>
	    <%= f.input :password, :required => true , :input_html => {:style =>"margin-left:10px;margin-bottom:20px;"}%>
	    <%= f.input :password_confirmation, :required => true , :input_html => {:style =>"margin-left:10px;margin-bottom:20px;"}%>
    <% end %>
  </div>

  <div style="margin-left:180px;">
    <%= f.button :submit, "Sign up", :class => "btn-primary" %>
<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to image_tag("#{provider.to_s.titleize}.png", :size => "20x20", :class =>"#{provider.to_s.titleize}"), omniauth_authorize_path(resource_name, provider) %>
  <% end -%>
<% end -%>
  </div>
<% end %>

<%#= render "devise/shared/links" %>
